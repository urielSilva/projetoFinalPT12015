<div class="container col-md-12 text-center well">
    <div class="row"><h1>Cargos</h1></div>
</div>

<div class="row">
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="col-md-12">Cargo</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @jobs.each do |job| %>
          <tr>
            <td class="col-md-12"><%= job.job_name %></td>
            <td><%= link_to 'Show', job %></td>
            <td><%= link_to 'Edit', edit_job_path(job) %></td>
            <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<br>

<% if logged_in? && current_user.admin? %>
    <div class="container">
        <div class="row col-md-12 text-center"><%= link_to 'Novo Cargo', new_job_path, class: "btn btn-primary" %></div>
    </div>
<% end %>