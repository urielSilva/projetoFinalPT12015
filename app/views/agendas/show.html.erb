<div class="text-center">
    <div class="row">
        <div class="col-md-4">
        <p>
          <strong>Pauta:</strong><br>
          <%= @agenda.agenda_name %>
        </p>
        </div>

        <div class="col-md-4">
        <p>
          <strong>Descrição:</strong><br>
          <%= @agenda.agenda_description %>
        </p>
        </div>

        <div class="col-md-4">
        <p>
          <strong>Data:</strong><br>
          <%= @agenda.agenda_date %>
        </p>
        </div>
    </div><br><br>

    <div class="row">
        <%= link_to 'Editar', edit_agenda_path(@agenda), class: "btn btn-default" %>
        <%= link_to 'Voltar', agendas_path, class: "btn btn-default" %>
    </div>
</div>