<p id="notice"><%= notice %></p>

<h1>Listing Functions</h1>

<table>
  <thead>
    <tr>
      <th>Function name</th>
      <th>Function module</th>
      <th>Function url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @functions.each do |function| %>
      <tr>
        <td><%= function.function_name %></td>
        <td><%= function.function_module %></td>
        <td><%= function.function_url %></td>
        <td><%= link_to 'Show', function %></td>
        <td><%= link_to 'Edit', edit_function_path(function) %></td>
        <td><%= link_to 'Destroy', function, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

