<div class="text-center well">
    <%= form_for(@function) do |f| %>

      <div class="field form-group">
        <%= f.label :function_name, 'Função' %><br>
        <%= f.text_field :function_name, class:'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.label :function_module, 'Módulo' %><br>
        <%= f.text_field :function_module, class:'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.label :function_url, 'Url' %><br>
        <%= f.text_field :function_url, class:'form-control' %>
      </div>
      <div class="actions text-center">
        <%= f.submit 'Criar Função', class:'btn btn-success' %>
      </div><br>

      <div class="text-center">
        <%= link_to 'Voltar', functions_path, class: "btn btn-default" %>
      </div>

    <% end %>
</div>