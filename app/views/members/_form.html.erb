<div class="text-center well">
    <%= form_for(@member) do |f| %>

      <div class="field form-group">
        <%= f.label :member_name, 'Nome' %><br>
        <%= f.text_field :member_name, class: "form-control"%>
      </div>
      <div class="field form-group">
        <%= f.label :member_email, 'Email' %><br>
        <%= f.text_field :member_email, class:"form-control" %>
      </div>
      <div class="field form-group">
        <%= f.label :member_password, 'Senha' %><br>
        <%= f.password_field :member_password, class:"form-control" %>
      </div>
      <div class="field form-group">
        <%= f.label :job_id, 'Cargo' %>
        <%= f.select :job_id, Job.all.collect { |j| [j.job_name, j.id]}, class:"form-control" %>
      </div>

  <div class="actions text-center col-md-12">
    <%= f.submit "Criar Cargo", class:"btn btn-success" %>
  </div><br><br>

      <div class="col-md-12 text-center">
        <%= link_to 'Voltar', members_path, class: "btn btn-default" %>
      </div><br><br>

<% end %>

</div>