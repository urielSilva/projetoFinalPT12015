<div class="container col-md-12 text-center well">
    <div class="row"><h1>Listing Members</h1></div>
</div>

<div class="row">
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="col-md-4">Member name</th>
          <th class="col-md-4">Member email</th>
          <th class="col-md-4">Member Job</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @members.each do |member| %>
          <tr>
            <td class="col-md-4"><%= member.member_name %></td>
            <td class="col-md-4"><%= member.member_email %></td>
            <td class="col-md-4"><%= member.pega_job %></td>
            <td><%= link_to 'Show', member %></td>
            <% if logged_in? && current_user.admin? %>
                <td><%= link_to 'Edit', edit_member_path(member) %></td>
                <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<br>

<% if logged_in? && current_user.admin? %>
    <div class="container">
        <div class="row col-md-12 text-center"><%= link_to 'New Member', new_member_path, class: "btn btn-primary" %></div>
    </div>
<% end %>